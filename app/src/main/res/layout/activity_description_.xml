<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6Fb"
    tools:context=".Description_Activity">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:background="@drawable/back"
            android:layout_marginStart="10dp"
            android:layout_height="70dp"
            android:onClick="goBack"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="Name"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textSize="18sp"
            android:background="@drawable/compact_text_view_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ageFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="Age"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/compact_text_view_white"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cityFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="City"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"

            android:background="@drawable/compact_text_view_white"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/jobFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="Job"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/compact_text_view_white"
            android:textSize="18sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/aboutFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="About"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:background="@drawable/compact_text_view_white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myGenderFieldDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="Gender"/>
        <RadioGroup
            android:id="@+id/radioGroupMyGender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#fabfd3"
            android:layout_gravity="center"
            android:textColor="#fabfd3">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/male"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/facet30"
                android:button="@null"
                android:textAlignment="center"
                android:text="@string/male"
                android:background="@drawable/radio_button_round_left"
                android:textColor="#fabfd3" />
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/female"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/kobieta30"
                android:button="@null"
                android:textAlignment="center"
                android:text="@string/female"
                android:background="@drawable/radio_button_round_right"
                android:textColor="#fabfd3" />
        </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>